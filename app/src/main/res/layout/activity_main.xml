<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.snackgo.gosnack.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        android:id="@+id/but_home"
        android:background="#ffd900"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="랭킹"
        android:id="@+id/but_rank"
        android:background="#ffd900"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/but_lab"
        android:layout_toStartOf="@+id/but_lab" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과자 연구소"
        android:id="@+id/but_lab"
        android:background="#ffd900"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/but_random"
        android:layout_toStartOf="@+id/but_random" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뽑기"
        android:id="@+id/but_random"
        android:background="#ffd900"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_link"
        android:layout_below="@+id/but_rank"
        android:layout_alignLeft="@+id/but_rank"
        android:layout_alignStart="@+id/but_rank"
        android:layout_marginTop="43dp" />


</RelativeLayout>
